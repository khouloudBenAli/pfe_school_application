<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFBFBF"
    tools:context=".admin">


 <TextView
     android:id="@+id/tv_Espace_Admin"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:fontFamily="@font/amaranth_bold"
     android:text="Espace Admin "
     android:textColor="@color/black"
     android:textSize="35dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.565"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     tools:ignore="MissingConstraints" />

 <TextView
     android:id="@+id/tv_niveaux"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="60dp"
     android:layout_marginTop="32dp"
     android:fontFamily="@font/font"
     android:text="Niveaux"
     android:textColor="@color/black"
     android:textSize="20dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_Espace_Admin"
     tools:ignore="MissingConstraints" />

 <ImageButton
     android:id="@+id/ib_niveaux"
     android:layout_width="128dp"
     android:layout_height="128dp"
     android:layout_marginStart="44dp"
     android:layout_marginTop="8dp"
     android:contentDescription="classes"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_niveaux"
     app:srcCompat="@drawable/classes" />

 <TextView
     android:id="@+id/tv_allclasses"
     android:layout_width="103dp"
     android:layout_height="42dp"
     android:layout_marginTop="24dp"
     android:layout_marginEnd="24dp"
     android:fontFamily="@font/font"
     android:text="Presence eleves"
     android:textColor="@color/black"
     android:textSize="20dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_Espace_Admin"
     tools:ignore="MissingConstraints" />

 <ImageButton
     android:id="@+id/ib_classes"
     android:layout_width="116dp"
     android:layout_height="118dp"
     android:layout_marginTop="8dp"
     android:layout_marginEnd="20dp"
     android:contentDescription="classes"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_allclasses"
     app:srcCompat="@drawable/allclasse" />

 <TextView
     android:id="@+id/tv_profPresence"
     android:layout_width="105dp"
     android:layout_height="wrap_content"
     android:layout_marginStart="36dp"
     android:layout_marginTop="8dp"
     android:fontFamily="@font/font"
     android:text="Presence profrsseur"
     android:textColor="@color/black"
     android:textSize="20dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/ib_Avis_Notification"
     tools:ignore="MissingConstraints" />

 <ImageButton
     android:id="@+id/ib_attendance"
     android:layout_width="126dp"
     android:layout_height="127dp"

     android:layout_marginStart="16dp"
     android:layout_marginTop="8dp"
     android:contentDescription="classes"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_profPresence"
     app:srcCompat="@drawable/attendance" />

 <TextView
     android:id="@+id/tv_Avis_Notification"
     android:layout_width="154dp"
     android:layout_height="49dp"
     android:fontFamily="@font/amaranth_bold"
     android:gravity="center"
     android:text="Avis ET Notification"
     android:textColor="@color/black"
     android:textSize="15dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.498"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/ib_classes"
     tools:ignore="MissingConstraints" />

 <ImageButton
     android:id="@+id/ib_Avis_Notification"
     android:layout_width="128dp"
     android:layout_height="128dp"
     android:layout_marginTop="4dp"
     android:contentDescription="avisNotification"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.512"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_Avis_Notification"
     app:srcCompat="@drawable/avisetnotification" />

 <TextView
     android:id="@+id/tv_accessHistorique"
     android:layout_width="116dp"
     android:layout_height="37dp"
     android:layout_marginTop="12dp"
     android:layout_marginEnd="40dp"
     android:fontFamily="@font/font"
     android:text="Historique d'acces"
     android:textColor="@color/black"
     android:textSize="20dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/ib_Avis_Notification"
     tools:ignore="MissingConstraints" />

 <ImageButton
     android:id="@+id/ib_historique"
     android:layout_width="128dp"
     android:layout_height="128dp"
     android:layout_marginTop="8dp"
     android:layout_marginEnd="40dp"
     android:contentDescription="classes"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_accessHistorique"
     app:srcCompat="@drawable/historiquedaccess" />

</androidx.constraintlayout.widget.ConstraintLayout>